{
  "name": "barefoot-nomad",
  "version": "1.0.0",
  "description": "An app for making company global travel and accommodation easy and convenient",
  "main": "index.js",
  "scripts": {
    "db:setup": "cross-env NODE_ENV=test sequelize db:migrate:undo:all && cross-env NODE_ENV=test sequelize db:migrate && npm run seed",
    "build": "babel src -d dist",
    "clean": "rm -rf dist/*",
    "db:migrate": "./node_modules/.bin/sequelize db:migrate",
    "db:unmigrate": "./node_modules/.bin/sequelize db:migrate:undo:all",
    "lint": "./node_modules/.bin/eslint",
    "lint:fix": "./node_modules/.bin/eslint --fix",
    "start": "set DEBUG=http:* && node ./dist/index.js",
    "start:dev": "set DEBUG=http:* && nodemon src/index.js --exec babel-node",
    "test": "npm run db:setup && set DEBUG=http:* && cross-env NODE_ENV=test nyc mocha --timeout 120000 src/test/** --exit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "seed": "cross-env NODE_ENV=test sequelize db:seed:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andela/storm-backend.git"
  },
  "author": "Kola Akindoju <kolaakindoju@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/andela/storm-backend/issues"
  },
  "homepage": "https://github.com/andela/storm-backend#readme",
  "dependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.5.5",
    "@babel/runtime": "^7.5.5",
    "@hapi/joi": "^15.1.1",
    "@sendgrid/mail": "^6.4.0",
    "bcrypt": "^3.0.6",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "ioredis": "^4.14.0",
    "jsonwebtoken": "^8.5.1",
    "mock-req-res": "^1.1.1",
    "pg": "^7.12.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.15.0",
    "sequelize-cli": "^5.5.0",
    "swagger-jsdoc": "^3.4.0",
    "swagger-ui-express": "^4.0.7",
    "trim-request-body": "^1.0.1"
  },
  "devDependencies": {
    "@babel/node": "^7.5.5",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.0.6",
    "cross-env": "^5.2.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1",
    "mocha": "^6.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "sinon": "^7.4.1",
    "sinon-chai": "^3.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "nyc": {
    "require": [
      "@babel/register"
    ],
    "reporter": [
      "lcov",
      "text",
      "html"
    ],
    "exclude": [
      "src/test/**"
    ]
  }
}
